
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/Template.cshtml";
}



<br />
<section class="container">
    <header style="margin-top:20px;">
        <h2 class="text-secondary" style="font-size:medium;">
            Cadastro

        </h2>

    </header>
    <hr />
    <div class="card">

        <div class="card-body">
            <form role="form" method="post" action="javascript:func()" id="form-cadastro">
                @*<input type="hidden" id="hdPoliticaCancelamentoId" value="" name="id" />*@
                <div class="row">
                    <div class="col-md-5">
                        <label for="txtNome">Nome</label>
                        <input type="text" class="form-control" value="" name="Nome" id="txtNome" />
                    </div>
                    <div class="col-md-5">
                        <label for="txtEmail">email</label>
                        <input type="email" class="form-control" placeholder="digite seu email" value="" name="Email" id="txtEmail" />
                    </div>

                </div>

                <br />
                <div class="row">
                    <div class="col-md-12">
                        <label for="txtDescricao">
                            Pergunta <span style="color:red;">*</span>
                        </label>
                        <textarea name="Pergunta" class="form-control" id="txtDescricao" rows="6" cols="80">@ViewBag.Descricao_PT</textarea>
                    </div>
                </div>

                <br />


                <br />
                <button type="submit" id="btnCadastraPergunta" class="btn btn-primary btn-sm">Salvar</button>
            </form>
        </div>
    </div>
</section>
